<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_tv_show_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_tv_show_details_poster"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="4dp"
        app:layout_constraintDimensionRatio="w,2:3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view_tv_show_details_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/iv_poster_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_film" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_view_creator_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/creator_label"
        android:textSize="@dimen/text_size_title"
        app:layout_constraintStart_toEndOf="@+id/card_view_tv_show_details_poster"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_creator_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:text="@string/creator_name"
        android:textSize="@dimen/text_size_title"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_view_creator_label"
        app:layout_constraintTop_toTopOf="@+id/text_view_creator_label" />

    <TextView
        android:id="@+id/text_view_first_air_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/first_air_date_label"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toEndOf="@+id/card_view_tv_show_details_poster"
        app:layout_constraintTop_toBottomOf="@+id/text_view_creator_label" />

    <TextView
        android:id="@+id/text_view_first_air_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:text="@string/first_air_date"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_view_first_air_date_label"
        app:layout_constraintTop_toTopOf="@+id/text_view_first_air_date_label" />

    <TextView
        android:id="@+id/text_view_episode_runtime_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/episode_runtime_label"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toEndOf="@+id/card_view_tv_show_details_poster"
        app:layout_constraintTop_toBottomOf="@+id/text_view_first_air_date_label" />

    <TextView
        android:id="@+id/text_view_episode_runtime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:text="@string/episode_runtime"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_view_episode_runtime_label"
        app:layout_constraintTop_toTopOf="@+id/text_view_episode_runtime_label" />

    <TextView
        android:id="@+id/text_view_tv_show_details_rating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/rating_label"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toEndOf="@+id/card_view_tv_show_details_poster"
        app:layout_constraintTop_toBottomOf="@+id/text_view_episode_runtime_label" />

    <TextView
        android:id="@+id/text_view_tv_show_details_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:text="@string/rating"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_view_tv_show_details_rating_label"
        app:layout_constraintTop_toTopOf="@+id/text_view_tv_show_details_rating_label" />

    <TextView
        android:id="@+id/text_view_network_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/network_label"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toEndOf="@+id/card_view_tv_show_details_poster"
        app:layout_constraintTop_toBottomOf="@+id/text_view_tv_show_details_rating_label" />

    <TextView
        android:id="@+id/text_view_network"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:text="@string/network"
        android:textSize="@dimen/text_size_small"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_view_network_label"
        app:layout_constraintTop_toTopOf="@+id/text_view_network_label" />

    <TextView
        android:id="@+id/text_view_next_episode_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/next_episode_label"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toEndOf="@+id/card_view_tv_show_details_poster"
        app:layout_constraintTop_toBottomOf="@+id/text_view_network_label" />

    <TextView
        android:id="@+id/text_view_next_episode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:text="@string/next_episode"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_view_next_episode_label"
        app:layout_constraintTop_toTopOf="@+id/text_view_next_episode_label" />

    <TextView
        android:id="@+id/text_view_tv_show_details_genres_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/genres_label"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_tv_show_details_poster" />

    <TextView
        android:id="@+id/text_view_tv_show_details_genres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:text="@string/genres"
        android:textSize="@dimen/text_size_small"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_view_tv_show_details_genres_label"
        app:layout_constraintTop_toTopOf="@+id/text_view_tv_show_details_genres_label" />

</android.support.constraint.ConstraintLayout>