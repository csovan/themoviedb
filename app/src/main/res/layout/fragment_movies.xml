<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout_movies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MoviesFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_view_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linear_layout_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/movies_now_playing_section" />

            <include
                layout="@layout/movies_popular_section" />

            <include
                layout="@layout/movies_upcoming_section" />

            <include
                layout="@layout/movies_top_rated_section" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/progress_bar" />

</FrameLayout>