<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_large"
    android:layout_width="320dp"
    android:layout_height="200dp"
    android:elevation="100dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp">

    <ImageView
        android:id="@+id/image_view_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/iv_backdrop_desc"
        app:srcCompat="@drawable/ic_film" />

    <TextView
        android:id="@+id/text_view_title_card_large"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:text="@string/card_title"
        android:background="@drawable/card_large_scrim"
        android:textAlignment="center"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/text_size_title" />

</android.support.v7.widget.CardView>